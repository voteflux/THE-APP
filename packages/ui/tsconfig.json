{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "baseUrl": ".",
    "rootDir": "./",
    "types": [
      "node", "vuetify"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@c/*": ["./src/components/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
  ],
  "exclude": [
    "../[^(ui)]",
    "dist",
    "../**/.webpack",
    // "node_modules",
  ]
}
